// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Banner {
  id     Int    @id @default(autoincrement())
  name   String @unique
  href   String
  images String
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String
  category   String
  tags       Tag[]
  price      Int
  oldPrice   Int?
  images     String
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String
  products Product[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String
  products Product[]
}

